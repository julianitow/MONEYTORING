{% if error == "nullBudget" %}
  <div class="alert alert-danger" style="margin-bottom: 10px">
    ATTENTION VOTRE BUDGET A ÉTÉ DEPASSÉ.
  </div>
{% endif %}

<div class="content-wrapper">
    <div class="container-fluid">
    <div class="row">

        {% block body %}

        <div class="col-lg-5" id="position">
            <div id="canvas-holder">
                <canvas id="chart-area" style="margin-top: 30px" height="10" width="10"></canvas>
            </div>

        <script>
            var config = {
                type: 'doughnut',
                data: {
                    datasets: [{
                        data: [
                            {% for value in montant %}
                              {{ value }},
                            {% endfor %}
                            {{ budgetRestant }}
                        ],
                        backgroundColor: [
                            {% for partition in fractions %}
                              window.chartColors.{{ partition.couleur }},
                            {% endfor %}
                        ],
                        label: 'Dataset 1'
                    }],
                    labels: [
                      {% if fractions != null %}
                      {% for partition in fractions %}
                        "{{ partition.nom }}",
                      {% endfor %}
                      {% endif %}
                    ]
                },
                options: {
                    responsive: true,
                    legend: {
                        position: 'top'
                    },
                    title: {
                        display: true,
                        text: 'Situation actuelle'
                    },
                    animation: {
                        animateScale: true,
                        animateRotate: true
                    }
                }
            };

            window.onload = function() {
                var ctx = document.getElementById("chart-area").getContext("2d");
                window.myDoughnut = new Chart(ctx, config);
            };

            </script>
        </div>

        <div class="col-lg-7" style="margin-top: 30px" id="tableScroll">
                <table class="table">
                    <thead class="thead-dark" id="headScroll" style="text-align: center">
                    <tr>
                        <th scope="col">
                            Mouvement
                        </th>
                        <th scope="col">
                            Nom
                        </th>
                        <th scope="col">
                            Montant
                        </th>
                        <th scope="col">
                            Date
                        </th>
                        <th scope="col">
                            Partition
                        </th>
                        <th scope="col">
                            Type
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for mouvement in mouvements %}
                        {% for mouv in mouvement %}
                            <tr>
                                <td scope="row" style="text-align: center">
                                    {{ mouv.id }}
                                </td>
                                <td scope="row" style="text-align: center">
                                    {{ mouv.nom }}
                                </td>
                                <td scope="row">
                                    {{ mouv.montant }}
                                </td>
                                <td scope="row">
                                    {{ mouv.date|date("d/m/Y") }}
                                </td>
                                <td scope="row">
                                    {{ mouv.fraction.nom }}
                                </td>
                                <td scope="row">
                                    {{ mouv.type }}
                                </td>
                            </tr>
                        {% endfor %}
                    {% endfor %}
                    </tbody>
                </table>
        </div>

    </div>
    <div class="row">
        <div class="col-lg-5">
          {% if error == "DBALException" %}
            <div class="alert alert-danger">
              Le montant ne peut être nul.
            </div>
          {% endif %}

          <h3> Entrer un nouveau mouvement </h3>
          <!-- Formulaire de création de mouvement-->
          {{ form_start(form) }}
          {{ form_widget(form) }}
          {{ form_end(form) }}

          <script>
            function itemChange() {
              list = document.getElementById('form_type');
              choix = list.options[list.selectedIndex].text;
              if (choix == "Rentrée")
              {
                document.getElementById('form_fraction').disabled=true;
                //location.reload();
              }
              else {
                document.getElementById('form_fraction').disabled=false;
              }
              //location.reload();
            }
          </script>
        </div>
    </div>

